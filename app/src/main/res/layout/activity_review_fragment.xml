<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ReviewFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cookie"
        android:text="@string/reviewFragment_text"
        android:textSize="35sp"
        android:layout_marginBottom="10dp"
        android:textColor="#0D1E78" />

    <TextView
        android:id="@+id/reviewFragment_LBL_totalScore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:fontFamily="@font/cookie"
        android:textSize="25sp"
        android:textColor="#0D1E78" />

    <TextView
        android:id="@+id/reviewFragment_LBL_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:fontFamily="@font/cookie"
        android:textSize="25sp"
        android:textColor="#0D1E78"
        android:text="@string/reviewFragment_text_0"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/reviewFragment_RCV_pictureList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="10dp"/>


</LinearLayout>